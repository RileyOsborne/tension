APP_NAME=Tension
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8888

DB_CONNECTION=sqlite

SESSION_DRIVER=database
CACHE_STORE=database
QUEUE_CONNECTION=sync

# Broadcasting (for multi-device player support)
BROADCAST_CONNECTION=reverb

# Reverb WebSocket Server
REVERB_APP_ID=tension
REVERB_APP_KEY=tension-app-key
REVERB_APP_SECRET=tension-app-secret
REVERB_HOST="localhost"
REVERB_PORT=8989
REVERB_SCHEME=http
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8989

# Vite (frontend) Reverb Settings
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# Set to your local network IP for mobile device testing (optional)
VITE_HMR_HOST=localhost
